<clickhouse>
    <prometheus>
        <port>9090</port>
        <handlers>
            <remote_write>
                <url>/api/v1/write</url>
                <handler>
                    <type>remote_write</type>
                    <database>otel</database>
                    <table>prometheus_metrics</table>
                </handler>
            </remote_write>
            <metrics>
                <url>/metrics</url>
                <handler>
                    <type>expose_metrics</type>
                    <metrics>true</metrics>
                    <asynchronous_metrics>true</asynchronous_metrics>
                    <events>true</events>
                    <errors>true</errors>
                </handler>
            </metrics>
        </handlers>
    </prometheus>
</clickhouse>