<clickhouse>
    <prometheus>
        <port>9090</port>
        <handlers>
            <metrics_handler>
                <url>/metrics</url>
                <handler>
                    <type>expose_metrics</type>
                    <metrics>true</metrics>
                    <events>true</events>
                    <asynchronous_metrics>true</asynchronous_metrics>
                    <status_info>true</status_info>
                </handler>
            </metrics_handler>
            <prometheus_write>
                <url>/api/v1/write</url>
                <handler>
                    <type>remote_write</type>
                    <database>otel</database>
                    <table>prometheus</table>
                </handler>
            </prometheus_write>
        </handlers>
    </prometheus>
</clickhouse>